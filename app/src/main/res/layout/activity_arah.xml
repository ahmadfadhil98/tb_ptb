<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Navigasi"
            android:textAlignment="center"
            android:textColor="#090A0A"
            android:textSize="20sp"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/backImg"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/back"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/location_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_bg"
            android:drawableStart="@drawable/ellipse_13"
            android:drawablePadding="10dp"
            android:hint="Lokasi Anda"
            android:minHeight="48dp"
            android:paddingHorizontal="25dp"
            map:layout_constraintTop_toBottomOf="@+id/head"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="35dp" />

        <EditText
            android:id="@+id/homestay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/input_bg"
            android:drawableStart="@drawable/vector"
            android:drawablePadding="10dp"
            android:hint="Homestay"
            android:minHeight="48dp"
            android:paddingHorizontal="25dp"
            map:layout_constraintTop_toBottomOf="@+id/location_user"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="35dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        tools:context=".ArahActivity" />

</LinearLayout>
