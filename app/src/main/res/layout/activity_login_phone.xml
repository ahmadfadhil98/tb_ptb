<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginPhoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_marginLeft="35dp"
                app:srcCompat="@drawable/back" />

            <TextView
                android:id="@+id/head4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Masuk"
                android:textAlignment="center"
                android:textColor="#090A0A"
                android:textSize="20sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView48"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:text="Selamat Datang!"
            android:textColor="#090A0A"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="10dp"
            android:text="Masuk ke akun"
            android:textColor="#090A0A"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/nomor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:hint="Nomor Handphone"
            android:inputType="phone"
            android:minHeight="48dp"
            android:paddingHorizontal="25dp" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginVertical="10dp"
            android:text="Anda akan menerima verifikasi SMS yang mungkin menerapkan tarif pesan dan data." />

    </LinearLayout>

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:onClick="toMap"
        android:text="Masuk"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/textView51"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:minHeight="48dp"
        android:onClick="toLoginEmail"
        android:text="Gunakan email, Langsung"
        android:textAlignment="center"
        android:textColor="#6B4EFF"
        android:textSize="16sp" />
</LinearLayout>