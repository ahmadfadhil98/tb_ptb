<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_4030276379_d04968cd36_b"
    tools:context=".LaunchScreenActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="62dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Harau"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textColor="#FBF8F7"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stay"
                    android:textStyle="bold"
                    android:textColor="@color/purple_200"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Memudahkan"
                    android:textAlignment="center"
                    android:textColor="#FFFEFE"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mencari Homestay"
                    android:textAlignment="center"
                    android:textColor="#FDFCFC"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="di Harau"
                    android:textAlignment="center"
                    android:textColor="#FAF7F7"
                    android:textSize="34sp" />
            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip4"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginHorizontal="100dp"
                android:layout_marginBottom="35dp"
                android:onClick="toWalkhthrough"
                android:text="Memulai"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:chipSurfaceColor="#673AB7"
                app:layout_constraintBottom_toBottomOf="parent" />

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>